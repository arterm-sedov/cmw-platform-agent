+        file_path_pattern = r'([A-Za-z]:[\\/][^\s]+|[\\/][^\s]+\.(png|jpg|jpeg|gif|webp|svg|tiff|bmp|mp4|webm|avi|mov|wav|mp3|m4a|ogg|flac|aac|html))'
